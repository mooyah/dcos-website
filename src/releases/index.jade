extends ../../layouts/base.jade
block head
  title DC/OS Releases
block content
  .container.container--dark-background
    +header
    .container__content
      h1 DC/OS Releases

  .outer-container.bg-white.clearfix.py5.px2
    .row
      .max-width-4.mx-auto

        h2.heading-margin-bottom.center.mx-auto Release Channels

        .cards.flex.flex-auto.flex-wrap

          .stable-releases.card.card-content.stable.col-4.relative(style="padding-bottom: 3.75rem;")
            h3.mb0 Stable
            p.release-version.pb1 DC/OS 1.8
            p.hero-list__item__copy__paragraph.release-copy Latest stable release. Ready for production use.
            a.cta.cta--text.release-notes.pb2(href='/releases/1.8.8/#1-8-8') Release Notes

            .col-12.flex-end.mt-auto.relative
              button.absolute.dropdown.z-500.left-align.left-0.right-0
                a.btn.btn-primary.mb0.block.center.no-arrow.text-white.bg-heliotrope Get Release
                  img.ml1.align-middle(src='/assets/images/icons/arrow-down-docs-unselected-white.svg' style='margin-top: -2px;')
                ul
                  li: a(href='https://downloads.dcos.io/dcos/stable/aws.html', target='_blank') Amazon Web Services
                  li: a(href='https://downloads.dcos.io/dcos/stable/azure.html', target='_blank') Azure
                  li: a(href='https://downloads.dcos.io/dcos/stable/dcos_generate_config.sh') Direct Download

          .card.card-content.stable.col-4.relative
              h3.mb0 Early Access
              p.release-version.pb1 DC/OS 1.9
              p.hero-list__item__copy__paragraph.release-copy Upcoming release. <!-- Ready for development and testing. -->
              a.cta.cta--text.release-notes.pb2(href='/releases/1.9.0/') Release Notes

              .col-12.flex-end.mt-auto
                a.btn.btn-disabled.block.mb0 Coming Soon

          .master-releases.card.card-content.stable.col-4.relative(style="padding-bottom: 3.75rem;")
              h3.mb0 Master
              p.release-version.pb1 DC/OS master
              p.hero-list__item__copy__paragraph.release-copy.pb2 Bleeding edge automated release. Only tested with automated tests.

              .col-12.flex-end.mt-auto.relative
                button.absolute.dropdown.z-500.left-align.left-0.right-0
                  a.btn.btn-primary.mb0.block.center.no-arrow.text-white.bg-heliotrope Get Release
                    img.ml1.align-middle(src='/assets/images/icons/arrow-down-docs-unselected-white.svg' style='margin-top: -2px;')
                  ul
                    li: a(href='https://downloads.dcos.io/dcos/testing/master/aws.html') Amazon Web Services
                    li: a(href='https://downloads.dcos.io/dcos/testing/master/azure.html') Azure
                    li: a(href='https://downloads.dcos.io/dcos/testing/master/dcos_generate_config.sh') Direct Download

  .outer-container.bg-white.clearfix.pb5.px2
    .row
      .max-width-4.mx-auto
        h2.heading-margin-bottom.center.mx-auto.mt0 Older Releases

        .container
          .container__content(style="padding-top: 0;")
            .container__content--release-notes.docs-layout__docs-content
              include:markdown 1.8.7/notes.md
              include:markdown 1.8.6/notes.md
              include:markdown 1.8.5/notes.md
              include:markdown 1.8.4/notes.md
              include:markdown 1.8.3/notes.md
              include:markdown 1.8.2/notes.md
              include:markdown 1.8.1/notes.md
              include:markdown 1.8.0/notes.md
              include:markdown 1.7-open/notes.md

  .container.container--dark-background
    .container__content
      h2 Install on any virtual or physical machines.
      a(href='/install').cta.cta--button Install
    +footer
